<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/image"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="@color/white_shade"
                android:layout_marginLeft="15dp"
                android:textSize="30sp"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_account_type"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/button_account_employer"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/account_employer"
            android:textColor="@color/link"
            android:background="@drawable/border_blue_button"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

        </Button>

        <Button
            android:id="@+id/button_account_worker"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="@string/account_worker"
            android:textColor="@color/link"
            android:background="@drawable/border_blue_button"
            android:layout_gravity="center">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>